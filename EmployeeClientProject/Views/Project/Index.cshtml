@using Microsoft.AspNetCore.Http;
@model IEnumerable<EmployeeClientProject.Models.ProjectModel>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="mb-4">All Projects</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.CompletedDate)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CompletedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.IsCompleted)</td>
                <td>
                    <a asp-action="Edit" asp-controller="Project" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-controller="Project" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    @if (!item.IsCompleted)
                    {
                        <a asp-action="Complete" asp-controller="Project" asp-route-id="@item.Id" class="btn btn-success btn-sm">Complete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
