@model IEnumerable<EmployeeClientProject.Models.RolesModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.RoleId,Name=item.RoleName  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.RoleId,Name=item.RoleName  })
            </td>
        </tr>
}
    </tbody>
</table>
