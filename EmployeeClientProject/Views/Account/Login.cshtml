@model EmployeeClientProject.Models.AccountModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex justify-content-center" style="min-height: 20vh;">
    <div>
        <h1 class="text-center">Login</h1>
        <hr />

        <form asp-action="Login" style="width: 26rem;">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" id="form2Example1" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" id="form2Example2" class="form-control" />
            </div>

            <span class="d-block text-danger text-opacity-75 mb-4">@ViewData["Message"]</span>

            <button type="submit" value="Login" class="btn btn-primary btn-block">Sign in</button>
            <div class="text-center pt-5">
                <p>Not a member? <a asp-controller="Account" asp-action="SignUp">Sign Up</a></p>
            </div>
        </form>

    </div>
</div>
